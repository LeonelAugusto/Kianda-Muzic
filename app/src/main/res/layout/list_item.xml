<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/trackCover"
        android:layout_width="118dp"
        android:layout_height="117dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/artistName"
        app:layout_constraintEnd_toStartOf="@+id/artistName"
        app:layout_constraintHorizontal_bias="0.007"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/fs"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/verifiedAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_verified_user_black_18dp"
        tools:layout_editor_absoluteX="102dp"
        tools:layout_editor_absoluteY="41dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/trackName"
        android:layout_width="62dp"
        android:layout_height="16dp"
        android:text="Eli Soares"
        app:layout_constraintEnd_toStartOf="@+id/trackDetails"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="41dp" />

    <TextView
        android:id="@+id/artistName"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginEnd="132dp"
        android:text="MemÃ³rias"
        app:layout_constraintEnd_toStartOf="@+id/trackDetails"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="97dp" />

    <ImageView
        android:id="@+id/trackDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/artistName"
        app:srcCompat="@drawable/ic_details_black_18dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="325dp" />
</android.support.constraint.ConstraintLayout>